.row
  .col-md-12
    .card
      .header
        a.btn.btn-info.btn-wd.right href="#{new_classroom_path}" =t('actions.classrooms.new')
        h4.title Lista de Turmas
        p.category Associe quantos alunos quiser a cada Turma
      .content.table-responsive.table-full-width
        table.table.table-striped
          thead
            tr
              th =t('activerecord.attributes.classroom.course')
              th =t('activerecord.attributes.classroom.student')
              th =t('activerecord.attributes.classroom.entry_at')
              th
              th
          tbody
            - @classrooms.each do |classroom|
              tr
                td =classroom.course.name
                td =classroom.student.name
                td =l classroom.entry_at, format: :long
                td
                  =link_to edit_classroom_path(classroom) do
                    i.ti-pencil-alt
                td
                  =link_to classroom, data: {:confirm => 'VocÃª tem certeza?'}, method: :delete, class: 'text-danger' do
                    i.ti-trash